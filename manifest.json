{
    "manifest_version": 2,
    "version": "0.0.1",
    "name": "Get Synced",
    "description": "The Mozilla Firefox Educational Tool",
    "homepage_url": "https://github.com/mozilla/get-synced",
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "64": "icons/icon-64.png"
    },
    "permissions": [
        "bookmarks",
        "notifications",
        "storage"
    ],
    "background": {
        "scripts": ["get-synced.js"]
    },
    "browser_action": {
        "browser_style": false,
        "default_icon": "icons/icon-32.png",
        "default_title": "Firefox Notifications",
        "default_popup": "ui/pop-up.html"
    }
}
